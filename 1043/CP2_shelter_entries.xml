      <LOC_STRING _locID="zoopedia_burrow_grassland:entry">Hol, weide</LOC_STRING>
      <LOC_STRING _locID="zoopedia_burrow_grassland:text">
			<cell pady="0" width="1000"/>
			<p/>
			<cell width="260"/>
			<cell width="640" height="320" bgimg="ui/zoopedia/topCellBg.dds">
				<cell width="600" padx="20" pady="20">
					<color r="255" g="255" b="255">
						<img src="entities/objects/shelters/AnimalBurrows_Shelter/AnimalBurrows_Grasslands_Large_icon.dds" sx="0" sy="0" sw="64" sh="64"/>
						<p/>
